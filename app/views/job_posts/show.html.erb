<p style="color: green"><%= notice %></p>

<% if admin? %>
  <div>
    <%= button_to "Destroy this job post", @job_post, method: :delete, class: "btn btn-danger" %>
  </div>
<% end %>

<div class="frame">
  <div class="info-box">
    <%= render "job_posts/full_job_post_info", job_post: @job_post %>
  </div>
  <% if admin? %>
    <%= link_to "Edit", edit_job_post_path(@job_post), class: "btn btn-dark" %> |
  <% end %>
  <%= link_to "Back", job_posts_path, class: "btn btn-dark" %>
</div>

